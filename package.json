{
  "name": "casper-backend",
  "version": "1.0.0",
  "description": "casper server",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "dev:debug": "cross-env NODE_ENV=development nodemon src/server.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "migration:generate": "drizzle-kit generate",
    "migration:push": "node -r esbuild-register src/config/migrate.ts",
    "drizzle:studio": "drizzle-kit studio",
    "migration:drop": "drizzle-kit drop"
  },
  "dependencies": {
    "apple-auth": "^1.0.9",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "^2.0.2",
    "nodemon": "^3.1.10",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "winston": "^3.17.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.4.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.5",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
